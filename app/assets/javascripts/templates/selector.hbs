<div id="party-creation-dialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="partyCreationLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="partyCreationLabel">Create a new party</h3>
  </div>
  <div class="modal-body">
    <label for="party-title-input">Party title: <input id="party-title-input" type="text" name="title" value=""></label>
  </div>
  <div class="modal-footer">
    <button id="creator" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Create party</button>
  </div>
</div>

<form method="post">
  <div class="controls controls-row">
    <select name="parties" class="selector">
      <option value="">select one to edit</option>
      {{#each parties}}
      <option value="{{ this.cid }}">{{ this.title }}</option>
      {{/each}}
    </select>
</form>

<div class="btn-group">
  <button class="btn btn-danger">Delete selected</button>
  <button class="btn btn-primary" href="#party-creation-dialog" role="button" class="btn" data-toggle="modal">New Party</button>
</div>
